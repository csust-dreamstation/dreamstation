.body {
	width: 1004px;
	height: 760px;
	border: 1px solid #315381;
	text-align: left;
	background-repeat: no-repeat;
	/*margin-left:175px;*/
	background-image: url(../image/background.jpg);
}
/* 导航栏*/
.nav {
	margin-top: 74px;
	margin-left: 280px;
	width: 530px;
	height: 50px;
	transform: rotate(7deg);
	-ms-transform: rotate(7deg); /* Internet Explorer */
	-moz-transform: rotate(7deg); /* Firefox */
	-webkit-transform: rotate(7deg); /* Safari 和 Chrome */
	-o-transform: rotate(7deg); /* Opera */
}

a:link {
	color: #000;
	text-decoration: none;
}

a:active {
	color: #000;
	text-decoration: none;
}

a:visited {
	color: #000;
	text-decoration: none;
}

a:hover {
	color: #000;
	text-decoration: underline;
}

/*新闻*/
.news {
	margin-left: 220px;
	margin-top: 24px;
	width: 500px;
	height: 30px;
	font-size: 5px;
}
/*图片切换*/
.picture {
	width: 680px;
	height: 290px;
	/*border:1px solid #FDCF6F;	*/
	margin-top: 1px;
	margin-left: 190px;
	float: left;
}
/*联系我们*/
.linkus {
	margin-top: 20px;
	margin-left: 240px;
	width: 80px;
	height: 30px;
	transform: rotate(7deg);
	-ms-transform: rotate(7deg); /* Internet Explorer */
	-moz-transform: rotate(7deg); /* Firefox */
	-webkit-transform: rotate(7deg); /* Safari 和 Chrome */
	-o-transform: rotate(7deg); /* Opera */
	font-size: 10px;
	font-family: "黑体";
	font-weight: bold;
	float: left;
	/*border:1px solid #FDCF6F;	*/
}

